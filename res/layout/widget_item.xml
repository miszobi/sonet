<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/friend_bg_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dip"
        android:paddingBottom="4dip"
        android:paddingLeft="4dip"
        android:paddingTop="4dip"
        android:singleLine="true"
        android:textColor="#00000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_bg_clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/friend_bg_clear"
        android:layout_marginLeft="48dip"
        android:paddingBottom="4dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:text="@string/loading"
        android:textColor="#00000000" />

    <ImageView
        android:id="@+id/image_clear"
        android:layout_width="1dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/message_bg_clear"
        android:layout_marginLeft="48dip"
        android:paddingLeft="4dip"
        android:paddingBottom="4dip" />

    <TextView
        android:id="@+id/bg_clear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/image_clear"
        android:height="0dip"
        android:textColor="#00000000" />

    <ImageView
        android:id="@+id/profile_bg"
        android:layout_width="48dip"
        android:layout_height="fill_parent"
        android:layout_above="@id/bg_clear"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/friend_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/message_bg_clear"
        android:layout_toRightOf="@id/profile_bg"
        android:scaleType="fitXY" />
    
    <ImageView
        android:id="@+id/status_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bg_clear"
        android:layout_below="@id/friend_bg"
        android:layout_toRightOf="@id/profile_bg"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="48dip"
        android:layout_height="48dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="4dip"
        android:layout_toRightOf="@id/profile"
        android:paddingBottom="4dip"
        android:paddingLeft="4dip"
        android:paddingTop="4dip"
        android:singleLine="true"
        android:textStyle="bold"
        android:textColor="@color/default_friend_color" />

    <TextView
        android:id="@+id/created"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/friend"
        android:gravity="right"
        android:paddingRight="4dip"
        android:paddingTop="4dip"
        android:singleLine="true"
        android:textColor="@color/default_friend_color" />

    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend"
        android:layout_toRightOf="@id/profile"
        android:paddingBottom="4dip"
        android:paddingLeft="4dip"
        android:paddingRight="4dip"
        android:text="@string/loading"
        android:textColor="@color/default_message_color" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/message"
        android:layout_marginLeft="48dip"
        android:paddingLeft="4dip"
        android:paddingBottom="4dip"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="16dip"
        android:layout_height="16dip"
        android:layout_alignBottom="@id/status_bg"
        android:layout_alignParentRight="true"
        android:paddingBottom="4dip"
        android:paddingRight="4dip" />

</RelativeLayout>